<!DOCTYPE html>
<html lang="en">
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
  />
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Code with Surya</title>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4"><%= pageName %></h1>
      <a href="/articles/new" class="btn btn-success">New</a>
      <% articles.forEach(ele=>{ %>
      <div class="card mt-4">
        <div class="card-body">
          <div class="card-title"><%= ele.title %></div>
          <div class="card-subtitle text-muted mb-2">
            <%= ele.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2"><%= ele.description %></div>
          <a href="/articles/<%= ele.slug %> " class="btn btn-primary"
            >Read more</a
          >
          <form
            action="/articles/<%= ele.id %>?_method=DELETE "
            method="POST"
            class="d-inline"
          >
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
