<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('_nav_bar') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="css/mainBlog.css" />
  </head>
  <title>Code with Surya</title>
  <body>
    <section class="py-5">
      <div class="container">
        <h2 class="blog-post-title py-4">Articles</h2>
        <div class="row mb-2 pt-5">
          <% articles.forEach(ele => { %>
          <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
              <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-primary"
                  ><%= ele.category %>
                </strong>
                <h3 class="mb-0">
                  <a class="text-dark" href="<%= ele.url %>"
                    ><%= ele.title %></a
                  >
                </h3>
                <div class="mb-1 text-muted">
                  <%= ele.createdAt.toLocaleDateString() %>
                </div>
                <p class="card-text mb-auto">
                  <%= ele.content.slice(0,50).concat('....') %>
                </p>
                <a href="<%= ele.url %>">Continue reading</a>
              </div>
              <img
                class="card-img-right flex-auto d-none d-md-block"
                data-src="holder.js/200x250?theme=thumb"
                alt="Thumbnail [200x250]"
                style="width: 200px; height: 250px"
                src="/img/thumbnails/article<%= ele.articleNumber %>.jpg"
                data-holder-rendered="true"
              />
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>
  </body>
</html>
